@model IEnumerable<Lab03Mahdi.Models.Course>

@{
    ViewData["Title"] = "ShowCourses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Available Courses</h1>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.CourseName)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Semester)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.CourseDescription)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.DateAdded)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Semester)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateAdded)
            </td>
            <td>
                @Html.ActionLink("Register", "Register", new {  id=item.Guid, returnUrl = Context.Request.Query["returnUrl"] }) |
                @Html.ActionLink("Edit", "Edit", new {  id=item.Guid, returnUrl = Context.Request.Query["returnUrl"] })
            </td>
        </tr>
}
    </tbody>
</table>
